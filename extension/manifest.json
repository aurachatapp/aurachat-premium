{
  "manifest_version": 3,
  "name": "AuraChat",
  "version": "1.0.1",
  "action": {
    "default_popup": "popup.html",
    "default_icon": { "128": "icons/icon128.png" }
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://aurachat-premium-backend.onrender.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://aurachatapp.github.io/aurachat-premium/*"],
      "exclude_matches": [
        "https://aurachatapp.github.io/*",
        "https://*.stripe.com/*",
        "https://billing.stripe.com/*"
      ],
      "js": ["content.session.js"],
      "run_at": "document_start"
    }
  ]
}